{
  "name": "h-crypto",
  "version": "1.1.1",
  "description": "A hybrid AES + RSA encryption library for JavaScript and TypeScript (client and server compatible).",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jibon-roy/h-crypto.git"
  },
  "homepage": "https://github.com/jibon-roy/h-crypto#readme",
  "bugs": {
    "url": "https://github.com/jibon-roy/h-crypto/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist --clean",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "test": "jest --passWithNoTests",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint --ext .ts src --max-warnings=0",
    "lint:fix": "eslint --ext .ts src --fix"
  },
  "keywords": [
    "encryption",
    "aes",
    "rsa",
    "hybrid",
    "crypto",
    "cryptography",
    "encryption",
    "h-crypto",
    "h-crypto",
    "hybrid-encryption",
    "asymmetric-encryption",
    "symmetric-encryption",
    "crypto-library",
    "security",
    "typescript",
    "javascript",
    "library",
    "nodejs",
    "browser"
  ],
  "author": "Jibon Krishna Roy",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "jest": "^30.2.0",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "glob": "^11.0.3",
    "libsodium-wrappers": "^0.7.15",
    "scrypt-js": "^3.0.1"
  }
}
